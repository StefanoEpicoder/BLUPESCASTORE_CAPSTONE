@model BLUPESCASTORE.Models.USER



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="contenitoreEsterno" data-aos="zoom-in">
        <div class="contenitoreLogIn d-flex flex-column justify-content-center align-content-center w-50 mx-auto rounded" >

            <div class="d-flex flex-column justify-content-center align-items-center">
                <h2 class="fade-in-right custom-title">LOG IN:</h2>
                @Html.ValidationSummary(true, "Uno o più campi input errati:", new { @class = "text-warning" })

                <div class="form-group">
                    <div class="d-flex flex-column align-items-center">
                        @Html.Label("USERNAME", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center">

                @Html.ValidationSummary(true, "", new { @class = "text-warning" })

                <div class="form-group">
                    <div class="d-flex flex-column align-items-center">
                        @Html.Label("PASSWORD", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.PasswordFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="form-group">
                    <div class="mt-4 mb-4">
                        <button type="submit" class="btn btn-success border border-light">ACCEDI</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<style>
    .custom-title {
        color: #1851C2; /* Cambia questo con il colore che preferisci */
        font-family: 'Fishing Script', cursive; /* Cambia questo con il font che preferisci */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Questo aggiunge un'ombra al testo */
    }
</style>