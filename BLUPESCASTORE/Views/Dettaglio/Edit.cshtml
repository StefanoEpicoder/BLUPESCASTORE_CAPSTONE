@model BLUPESCASTORE.Models.DETTAGLIO

@{
    ViewBag.Title = "Edit";
}

<h2>MODIFICA ARTICOLO</h2>
<div class="container-fluid" id="bgMenu">

    <div class="container" id="areaRiservata">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdDettaglio)
            @Html.HiddenFor(model => model.IdArticolo)


            <div class="form-group">
                @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quantita, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantita, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-flex align-items-center">
                <div class="">
                    <button type="submit" id="salva" class="btn btn-success"style="margin:10px;">SALVA</button>
                </div>
                <div>
                    @Html.ActionLink("INDIETRO", "Carrello", null, new { @class = "btn btn-secondary" })
                </div>
            </div>

        </div>
        }


    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
