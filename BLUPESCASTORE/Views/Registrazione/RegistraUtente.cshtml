@model BLUPESCASTORE.Models.REGISTRAZIONE
@{
    ViewBag.Title = "RegistraUtente";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<div class="ciupa container-fluid" id="bgMenu" data-aos="zoom-in">
    <h2 class="fade-in-right custom-title">REGISTRA NUOVO UTENTE</h2>
    <div class="container" id="areaRiservata">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="errorToast">
            <div class="toast-header">
                <strong class="me-auto">Notifica</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @ViewBag.ErrorMessage
            </div>
        </div>

        <script>
    // Verifica se esiste un messaggio di errore
    var errorMessage = '@TempData["ErrorMessage"]';
    if (errorMessage) {
        // Mostra un avviso SweetAlert
        swal({
            title: "Errore!",
            text: errorMessage,
            icon: "error",
            button: "OK",
        });
    }
        </script>
        @using (Html.BeginForm("RegistraUtente", "Registrazione", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="d-block" style="text-align: -webkit-center;">
                <div class="form-horizontal" style=" padding: 20px; border-radius: 10px; border: 1px solid #000;">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group col-md-4">
                        @Html.Label("Username", "INSERISCI UN USERNAME", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend rounded">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-user" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-6">
                        @Html.Label("Password", "INSERISCI UNA PASSWORD", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center justify-content-center">
                            <div class="input-group-prepend rounded">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock" style="font-size:24px;"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-6">
                        @Html.Label("ConfirmPassword", "CONFERMA LA PASSWORD", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center justify-content-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock" style="font-size:24px;"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Conferma Password" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-md-4">
                        @Html.Label("Nome", "INSERISCI IL TUO NOME", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-user" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Nome" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-md-4">
                        @Html.Label("Cognome", "INSERISCI IL TUO COGNOME", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-user" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Cognome" } })
                            @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-md-4">
                        @Html.Label("Cod_Fiscale", "INSERISCI IL TUO CODICE FISCALE", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-id-card" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Cod_Fiscale, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Codice Fiscale" } })
                            @Html.ValidationMessageFor(model => model.Cod_Fiscale, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group col-md-4">
                        @Html.Label("Citta", "INSERISCI LA TUA CITTÀ", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-city" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Citta, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Città" } })
                            @Html.ValidationMessageFor(model => model.Citta, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group col-md-4">
                        @Html.Label("Prov", "INSERISCI LA TUA PROVINCIA", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-map-marker-alt" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Prov, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Provincia" } })
                            @Html.ValidationMessageFor(model => model.Prov, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group col-md-4">
                        @Html.Label("Tel_Cell", "INSERISCI IL TUO NUMERO DI CELLULARE", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-phone" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Tel_Cell, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Numero di cellulare" } })
                            @Html.ValidationMessageFor(model => model.Tel_Cell, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group col-md-4">
                        @Html.Label("Email", "INSERISCI LA TUA EMAIL", new { @class = "control-label " })
                        <div class="input-group flex-nowrap align-items-center">
                            <div class="input-group-prepend">
                                <span class="input-group-text mr-2" id="basic-addon1"><i class="fas fa-envelope" style="font-size:24px;"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="REGISTRATI" class="btn btn-success" id="btnAccedi" style="width: 50%; font-size: 20px; margin-left: auto; margin-right: auto; display: block;" />
                        </div>
                    </div>


                </div>
            </div>
        }

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .custom-title {
        color: #1851C2; /* Cambia questo con il colore che preferisci */
        font-family: 'Fishing Script', cursive; /* Cambia questo con il font che preferisci */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Questo aggiunge un'ombra al testo */
    }
</style>